using System;
namespace calcultor2
{
    class program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Please input first number : ");
            double num1 = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Please input second number : ");
            double num2 = Convert.ToDouble(Console.ReadLine());

           
            Console.WriteLine("+");
            Console.WriteLine("-");
            Console.WriteLine("*");
            Console.WriteLine("/");
            Console.WriteLine("Please choose the operator from above :");

            string op = Console.ReadLine();

            if (op == "+") 
            {
                Console.WriteLine("You have choose Plus +, Your result is : " + (num1 + num2) );
            } else if (op == "-") 
            {
                Console.WriteLine("You have choose minus -, Your result is : " + (num1 - num2) );
            } else if (op == "*")
            {
                Console.WriteLine("You have choose multiplication *, Your result is : " + (num1 * num2)) ;
            }  else if (op == "/")
            {
                Console.WriteLine("You have choose division /, Your result is : " + (num1 / num2));
            } else
            {
                Console.WriteLine("Wrong input");
            }
                

        }
    }
}
